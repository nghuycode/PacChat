<UserControl x:Class="PacChat.Resources.CustomControls.Media.MediaPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacChat.Resources.CustomControls.Media"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Width="800">
    <StackPanel>
        <Grid>
            <Image x:Name="ImgFull" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,0" MaxHeight="500"/>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Padding="10,0,5,0" 
                    Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA2A2A2">
                <StackPanel Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <materialDesign:PackIcon Kind="CloudDownloadOutline" Height="30" VerticalContentAlignment="Center" />
                    <Label Content="Tải xuống" Foreground="#FFA2A2A2"  Height="30" VerticalContentAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MaterialDesignIconButton}"
                    Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="35" Height="35"
                    Foreground="#FFA2A2A2" >
                <materialDesign:PackIcon Kind="Close" />
            </Button>
        </Grid>
        <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Hidden" Margin="0,10,0,0">
            <StackPanel x:Name="Galary" Orientation="Horizontal">
                <Border >
                    <local:ThumbnailButton ThumbnailUrl="https://image.freepik.com/free-photo/image-human-brain_99433-298.jpg" MinWidth="100" MinHeight="90"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</UserControl>
