<UserControl x:Class="PacChat.Resources.CustomControls.Media.ThumbnailButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="100" Cursor="Hand" OpacityMask="#FF000000" >


    <Grid x:Name="Gat">
        <ProgressBar x:Name="LoadingAhihi"
          Style="{StaticResource MaterialDesignCircularProgressBar}"
          Value="0"
          IsIndeterminate="True" Height="Auto" Margin="20" Width="Auto" Background="{x:Null}" BorderBrush="{x:Null}"
          Foreground="#FFB6B6B6" />
        <Image x:Name="ImgThumbnail" 
           MaxWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" 
            MaxHeight="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
            MinWidth="90" MinHeight="90"
            RenderOptions.BitmapScalingMode="HighQuality" IsEnabled="False" Stretch="None" />
        <Button Height="Auto" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnClick"/>
    </Grid>
</UserControl>
