<UserControl x:Class="PacChat.Resources.CustomControls.Sticker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacChat.Resources.CustomControls"
             mc:Ignorable="d" 
             >
    <Grid x:Name="sticker" MouseLeftButtonDown="sticker_MouseLeftButtonDown" >
        <ProgressBar x:Name="progressBar" Width="130" Height="130"
             Style="{StaticResource MaterialDesignCircularProgressBar}"
            Value="0"
            IsIndeterminate="True" 
            Foreground="Gray"/>
    </Grid>
</UserControl>
