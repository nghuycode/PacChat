<UserControl x:Class="PacChat.Resources.CustomControls.Notifications.DownloadProgressNoti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacChat.Resources.CustomControls.Notifications"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="64" Width="Auto" Margin="0,0,0,4">
    <Border CornerRadius="8" Background="#FFA8A8A8">
        <Border CornerRadius="8" Background="White" Margin="1,0,1,2">
            <Grid>
                <DockPanel Margin="4,4,0,0">
                    <TextBlock x:Name="FileName" Text="file.apk" FontFamily="Segoe UI Semibold" FontSize="16" Margin="8,0,0,0" DockPanel.Dock="Top"/>
                    <ProgressBar x:Name="ProgressBar" Background="LightGray" BorderBrush="#FFB8B8B8" Foreground="#FF555555" Height="4" Margin="12,8,16,0" Value="20" DockPanel.Dock="Top"></ProgressBar>
                    <TextBlock x:Name="DownloadStatus" Text="Download completed" FontFamily="Segoe UI Semilight" Margin="12,4,0,0" DockPanel.Dock="Bottom" FontSize="10"/>
                </DockPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>
