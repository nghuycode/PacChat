                <Border
                    CornerRadius="10" 
                    Background="White"
                    MaxWidth="250" 
                    Margin="0,0,0,0"
                    >

                    <TextBlock x:Name="textBlock"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    Text="hello adasdqw eqweqeqwe chiều adafsfda sda dasdajkasdadadadasdasdasdmoi nguoi"
                    ToolTip="11:59"
                    Padding="10">
                    </TextBlock>
                </Border>
                <Border>
                    <TextBlock
                        x:Name="textBlockSeen"
                        Text="seen"
                        Foreground="{StaticResource GrayBrush}"
                        HorizontalAlignment="Right"
                        
                        >
                        
                    </TextBlock>
                </Border>
            </StackPanel>
            
        </Border>

    </Grid>
</UserControl>
