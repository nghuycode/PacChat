<Window x:Class="PacChat.TestWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:animator="clr-namespace:Animator;assembly=Animator"
        xmlns:local="clr-namespace:PacChat"
        xmlns:cc="clr-namespace:PacChat.Resources.CustomControls"
        mc:Ignorable = "d" Background="Transparent" d:DesignHeight="229" d:DesignWidth="378">

    <Grid Background="White">

        <materialDesign:PopupBox PlacementMode="TopAndAlignLeftEdges" StaysOpen="True" Margin="0,2,0,0" VerticalContentAlignment="Center" FontWeight="Bold" IsTabStop="False">
            <materialDesign:PopupBox.ToggleContent>

                <materialDesign:PackIcon
                                    Kind="Cart" 
                                    Width="32"
                                    Height="32"
                                    Foreground="#FF1E145F"
                            />
            </materialDesign:PopupBox.ToggleContent>

            <cc:StickerStoreDialog>
                
            </cc:StickerStoreDialog>

        </materialDesign:PopupBox>

    </Grid>

</Window> 