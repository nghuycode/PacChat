<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacChat"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:chatpage="clr-namespace:PacChat.ChatPageContents"
             xmlns:ChatAMVC="clr-namespace:PacChat.ChatAMVC" xmlns:ViewModels="clr-namespace:PacChat.ChatPageContents.ViewModels" xmlns:CustomControls="clr-namespace:PacChat.Resources.CustomControls" x:Class="PacChat.ChatPage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <DockPanel>
        <DockPanel.DataContext>
            <ChatAMVC:ChatModel/>
        </DockPanel.DataContext>

        <DockPanel DockPanel.Dock="Top"
                   Background="Transparent" 
                   Height="Auto"
                   >
            
            <Border Margin="5,3,0,3" Width="35" Height="35"
                    CornerRadius="50"
                    Background="LightBlue"
                    >
                <materialDesign:PackIcon Kind="User"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Width="24"
                                         Height="24"/>
            </Border>
            
            <Label x:Name="ChatTitle" Content="{Binding Title}" Margin="5,0,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI Semibold" DockPanel.Dock="Top"/>
            
            <Border>
                <TextBlock VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           Foreground="Gray">
                    Active 2 minutes ago
                </TextBlock>
            </Border>
 
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Height="41">
            <Button x:Name="btnSend" Margin="0" Width="50" Background="Transparent" BorderBrush="Transparent" RenderTransformOrigin="-0.68,0.172" VerticalAlignment="Center" HorizontalAlignment="Center" DockPanel.Dock="Right" Padding="0" Click="BtnSend_Click">
                <materialDesign:PackIcon Kind="Send" Foreground="#FF1E145F"  Width="24" Height="Auto"/>
            </Button>
            <Border CornerRadius="20"
                    Background= "LightGray"
                    Margin="30,0,0,5">
                
                <TextBox BorderThickness="0"
                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                         VerticalScrollBarVisibility="Auto"
                    materialDesign:HintAssist.Hint="Input message here..."  KeyDown="ChatInput_KeyDown" x:Name="ChatInput" Margin="32,0,25,4" TextWrapping="Wrap" Cursor="IBeam" FontSize="16" HorizontalContentAlignment="Stretch" CaretBrush="#FF1E145F" VerticalContentAlignment="Center"/>
            </Border>

        </DockPanel>
        <ScrollViewer x:Name="MessagesContainer" Margin="0" VerticalScrollBarVisibility="Auto" Padding="0,0,0,10" >
            <StackPanel x:Name="spMessagesContainer"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>
