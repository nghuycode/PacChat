<UserControl x:Class="PacChat.ChatPageContents.ChatBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacChat.ChatPageContents"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <Border Padding="5,0,0,0">
        <Grid>
            <Border CornerRadius="15" 
                    Background="#FF52176C">

                <TextBlock VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Text="This is the chatting message of users here . . ." 
                           FontSize="16"
                           Foreground="White" Grid.IsSharedSizeScope="True"
                           Padding="16"
                           >
                    
                </TextBlock>
            </Border>
        </Grid>
    </Border>
</UserControl>
