<Window x:Name="winnMain" x:Class="PacChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacChat"
        xmlns:chatcontent="clr-namespace:PacChat.ChatPageContents"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="PacChat" Height="499.5" Width="836.5" UseLayoutRounding="False" WindowStartupLocation="CenterScreen" Background="White" Padding="0" MinWidth="640" MinHeight="480" Margin="0" WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="0"
        ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Storyboard x:Key="left-side-panel-expand">
            <DoubleAnimation
                Storyboard.TargetName="LeftSidePanel"
                Storyboard.TargetProperty="Width"
                From="32" To="128" Duration="0:0:0.25"
                AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

        </Storyboard>
        <Storyboard x:Key="left-side-panel-compress">
            <DoubleAnimation
                Storyboard.TargetName="LeftSidePanel"
                Storyboard.TargetProperty="Width"
                From="128" To="32" Duration="0:0:0.25"
                AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <DockPanel Margin="0">
        <!--stackPanel HEADER-->
        <StackPanel x:Name="spanelHeader" DockPanel.Dock="Top" Height="32" Background="#004F4F4F" MouseMove="FormDrag" Margin="229,0,0,0">
            <DockPanel Height="32" HorizontalAlignment="Right" Width="96">
                <Button x:Name="BtnQuit"
                Style="{DynamicResource MaterialDesignRaisedButton}" HorizontalAlignment="Right"
                materialDesign:ShadowAssist.ShadowDepth="Depth0" Width="32" Padding="0" Background="#004F4F4F" BorderBrush="{x:Null}" Margin="0" DockPanel.Dock="Right" Height="32" VerticalAlignment="Bottom" Click="BtnQuit_Click" Cursor="Arrow">
                    <materialDesign:PackIcon
                    Kind="Close"
                    Height="16"
                    Width="16" Foreground="#DD000000" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>

                <Button x:Name="BtnMaximize"
                Style="{DynamicResource MaterialDesignRaisedButton}" HorizontalAlignment="Center"
                materialDesign:ShadowAssist.ShadowDepth="Depth0" Width="32" Padding="0" Background="#004F4F4F" BorderBrush="{x:Null}" DockPanel.Dock="Right" Height="32" VerticalAlignment="Bottom" Click="BtnMaximize_Click" Cursor="Arrow">
                    <materialDesign:PackIcon
                    Kind="WindowMaximize"
                    Height="16"
                    Width="16" Foreground="#DD000000" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>

                <Button x:Name="BtnMinimize"
                Style="{DynamicResource MaterialDesignRaisedButton}" HorizontalAlignment="Center"
                materialDesign:ShadowAssist.ShadowDepth="Depth0" Width="32" Padding="0" Background="#004F4F4F" BorderBrush="#004F4F4F" DockPanel.Dock="Right" Height="32" VerticalAlignment="Top" Click="BtnMinimize_Click" Cursor="Arrow">
                    <materialDesign:PackIcon
                    Kind="WindowMinimize"
                    Height="16"
                    Width="16" Foreground="#DD000000" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
            </DockPanel>




        </StackPanel>

        <!--stackPanel SIDEMENU-->
        <StackPanel x:Name="LeftSidePanel" Background="#FF52176C" HorizontalAlignment="Left" Width="32" Margin="0,-32,0,0">
            <Button Background="{x:Null}" BorderBrush="{x:Null}" Height="48" Width="Auto" Foreground="White" Padding="0" Cursor="Arrow" Click="Button_Click" >
                <materialDesign:PackIcon Kind="MoreHoriz" Width="24" Height="24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="#DDFFFFFF" />
            </Button>

            <Button x:Name="BtnNoti" Background="{x:Null}" BorderBrush="{x:Null}" Height="48" Foreground="White" Padding="4,0,0,0" Click="BtnNoti_Click" Cursor="Arrow" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Notifications" Width="24" Height="24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="#DDFFFFFF" />
                    <Label Content="Notifications" Foreground="#FFF1F1F1"></Label>
                </StackPanel>
            </Button>

            <Button x:Name="Btn2" Background="{x:Null}" BorderBrush="{x:Null}" Height="48" Foreground="White" Padding="4,0,0,0" Click="Btn2_Click" Cursor="Arrow" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="User" Width="24" Height="24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="#DDFFFFFF" />
                    <Label Content="Online users" Foreground="#FFF1F1F1"></Label>
                </StackPanel>
            </Button>

            <Button x:Name="Btn3" Background="{x:Null}" BorderBrush="{x:Null}" Height="48" Width="Auto" Foreground="White" Padding="4,0,0,0" HorizontalContentAlignment="Left" Click="Btn3_Click" Cursor="Arrow" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="UserBoxes" Width="24" Height="24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="#DDFFFFFF" />
                    <Label Content="Contact list" Foreground="#FFF1F1F1"></Label>
                </StackPanel>
            </Button>
        </StackPanel>

        <chatcontent:UserList
            Width="192"
            Background="#FF52176C" Margin="0,-32,0,0"/>

        <DockPanel x:Name="spanelContent" Background="White">
            <Label x:Name="ChatTitle" Content="IT008" FontSize="24" Background="{x:Null}" Foreground="#FF52176C" Margin="0" FontFamily="Segoe UI Semibold" FontWeight="Bold" VerticalAlignment="Top" DockPanel.Dock="Top"/>
            <StackPanel VerticalAlignment="Bottom" Height="38" DockPanel.Dock="Bottom">
                <TextBox x:Name="MsgBox" Text="Message..." Height="38" Padding="4,0,0,0" FontSize="18" Margin="0,0,96,0">
                </TextBox>
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Width="96" Margin="0,382,0,-38" Background="#FFA09E9E" Height="38" VerticalAlignment="Bottom">
                
            </StackPanel>
            
            <ScrollViewer DockPanel.Dock="Top"/>

        </DockPanel>

    </DockPanel>

</Window>
